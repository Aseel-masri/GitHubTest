        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.browserTest"/>
        </classes>
    </test>
    <test name="FirefoxTests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.browserTest"/>
        </classes>
    </test>
    <test name="EdgeTests">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="tests.browserTest"/>
        </classes>
    </test>
  </test> <!-- Test -->
</suite> <!-- Suite -->
